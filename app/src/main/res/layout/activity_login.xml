<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.jisung.herh.LoginActivity">




            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:orientation="vertical"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/chose_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/loginBtnOn"
                        android:onClick="onClick"
                        android:text="사용자" />

                    <Button
                        android:id="@+id/chose_host"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/loginButton"
                        android:onClick="onClick"
                        android:text="사업자" />
                </LinearLayout>

                <FrameLayout

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6">

                    <LinearLayout
                        android:id="@+id/screen_user"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/hers_logo"/>


                        <com.google.android.gms.common.SignInButton

                            android:id="@+id/sign_in_button"
                            android:layout_marginTop="50dp"
                            android:layout_marginRight="50dp"
                            android:layout_marginLeft="50dp"
                            android:layout_marginBottom="50dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="invisible"
                        android:id="@+id/screen_host"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <EditText

                            android:id="@+id/code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="50dp"
                            android:hint=" Code" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>
                        <Button
                            android:layout_marginBottom="15dp"
                            android:gravity="center"
                            android:id="@+id/login"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:background="@color/loginBtnOn"
                            android:onClick="onClick"
                            android:padding="20dp"
                            android:text="시작하기" />

                    </LinearLayout>
                </FrameLayout>

            </LinearLayout>






</LinearLayout>
